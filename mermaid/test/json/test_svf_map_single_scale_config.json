{
    "image_smoothing": {
        "smooth_images": true, 
        "smoother": {
            "gaussian_std": 0.025, 
            "type": "gaussian"
        }
    }, 
    "model": {
        "deformation": {
            "map_low_res_factor": 1.0, 
            "use_map": true
        }, 
        "registration_model": {
            "forward_model": {
                "number_of_time_steps": 10
            }, 
            "loss": {
                "display_max_displacement": false, 
                "limit_displacement": false, 
                "max_displacement": 0.05, 
                "regularizer": {
                    "alpha": 0.2, 
                    "gamma": 1.0, 
                    "type": "helmholtz"
                }
            }, 
            "similarity_measure": {
                "sigma": 0.02, 
                "type": "ssd"
            }, 
            "type": "svf_map"
        }
    }, 
    "optimizer": {
        "name": "lbfgs_ls", 
        "single_scale": {
            "nr_of_iterations": 20,
            "rel_ftol": 0.0001
        }
    }, 
    "square_example_images": {
        "len_l": 8, 
        "len_s": 5
    }
}
