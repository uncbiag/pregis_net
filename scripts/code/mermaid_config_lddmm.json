{
    "model": {
        "deformation": {
            "compute_similarity_measure_at_low_res": false,
            "map_low_res_factor": 0.5,
            "use_map": true
        },
        "registration_model": {
            "forward_model": {
                "adjoin_on": true,
                "atol": 1e-05,
                "number_of_time_steps": 20,
                "rtol": 1e-05,
                "smoother": {
                    "multi_gaussian_stds": [
                        0.05,
                        0.1,
                        0.15,
                        0.2,
			0.25
                    ],
		    "multi_gaussian_weights": [
                        0.06666666666666667,
                        0.13333333333333333,
                        0.19999999999999998,
                        0.26666666666666666,
                        0.3333333333333333
                    ],
                    "type": "multiGaussian"
                },
                "solver": "rk4"
            },
            "load_velocity_from_forward_model": false,
            "loss": {
                "display_max_displacement": false,
                "limit_displacement": false,
                "max_displacement": 0.1
            },
            "similarity_measure": {
                "develop_mod_on": false,
                "lncc": {
                    "dilation": [
                        1,
                        2,
                        2
                    ],
                    "kernel_size_ratio": [
                        [
                            0.0625,
                            0.125,
                            0.25
                        ],
                        [
                            0.25,
                            0.5
                        ],
                        [
                            0.5
                        ]
                    ],
                    "kernel_weight_ratio": [
                        [
                            0.1,
                            0.3,
                            0.6
                        ],
                        [
                            0.3,
                            0.7
                        ],
                        [
                            1.0
                        ]
                    ],
                    "resol_bound": [
                        128,
                        64
                    ],
                    "stride": [
                        0.25,
                        0.25,
                        0.25
                    ]
                },
                "sigma": 1.0,
                "type": "ncc"
            },
            "spline_order": 1,
            "type": "lddmm_shooting_map",
            "use_CFL_clamping": true
        }
    },
    "optimizer": {
        "lbfgs": {
            "history_size": 5,
            "line_search_fn": "backtracking",
            "max_eval": 5,
            "max_iter": 1
        },
        "multi_scale": {
            "scale_factors": [
                1.0,
                0.5,
                0.25
            ],
            "scale_iterations": [
                400,
                100,
                100
            ]
        },
        "name": "lbfgs_ls",
        "scheduler": {
            "factor": 0.5,
            "patience": 10,
            "verbose": true
        },
        "single_scale": {
            "nr_of_iterations": 200,
            "rel_ftol": 1e-15
        },
        "use_step_size_scheduler": true
    }
}
