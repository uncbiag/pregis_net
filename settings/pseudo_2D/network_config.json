{
    "model":{
        "dataset": "pseudo_2D",
        "dataset_type": "normal",
        "pregis_net":{
            "n_of_feature": 32,
            "bn": false,
            "dp": false,
            "dp_p": 0.2,
            "recons_weight": 10,
            "seg_weight": 10
        }
    },
    "train":{
        "n_of_epochs":1000,
        "batch_size":4,
        "min_summary_period":10,
        "optimizer":{
            "name": "ADAM",
            "lr": 0.001,
            "scheduler":{
                "name": "multistepLR",
                "milestones":[
                    300,
                    500,
                    800
                ],
                "gamma": 0.1
            }
        }
    },
    "validate":{
        "validate_epoch_period":1
    },
    "test":{
    }
}
