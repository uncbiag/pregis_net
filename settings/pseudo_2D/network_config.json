{
    "model":{
        "dataset": "pseudo_2D",
        "dataset_type": "normal",
        "pregis_net":{
            "mermaid_net": {
                "n_of_feature": 32,
                "bn": false,
                "dp": false,
                "dp_p": 0.2
            },
            "recons_net": {
                "n_of_feature": 32,
                "bn": false,
                "dp": false,
                "dp_p": 0.2,
                "use_TV_loss": true,
                "KLD_weight": 1,
                "L1_weight": 1,
                "TV_weight": 1,
                "recons_weight": 1,
                "sim_weight": 0.05,
                "mode_change_epoch": 100
            }
        }
    },
    "train":{
        "n_of_epochs":1000,
        "batch_size":4,
        "min_summary_period":10,
        "optimizer":{
            "name": "ADAM",
            "lr": 0.001,
            "scheduler":{
                "name": "multistepLR",
                "milestones": [
                    500,
                    800
                ],
                "gamma": 0.1
            }
        }
    },
    "validate":{
        "validate_epoch_period":1
    },
    "test":{
    }
}
