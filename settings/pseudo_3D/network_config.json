{
    "model":{
        "dataset": "pseudo_3D",
        "pregis_net":{
            "mermaid_net": {
                "n_of_feature": 32,
                "bn": false,
                "dp": false,
                "dp_p": 0.2
            },
            "recons_net": {
                "n_of_feature": 32,
                "bn": false,
                "dp": false,
                "dp_p": 0.2,
                "use_TV_loss": false,
                "KLD_weight": 0.001,
                "TV_weight": 0.1,
                "recons_weight": 1
            }
        }
    },
    "train":{
        "n_of_epochs":100,
        "batch_size":4,
        "min_summary_period":15,
        "optimizer":{
            "name": "ADAM",
            "lr": 0.0005,
            "scheduler":{
                "name": "multistepLR",
                "milestones": [
                   25,
                   50,
                   75
                ],
                "gamma": 1
            }
        }
    },
    "validate":{
        "validate_epoch_period":1
    },
    "test":{
    }
}
