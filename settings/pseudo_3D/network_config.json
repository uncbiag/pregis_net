{
    "model":{
        "n_of_feature": 32,
        "activation_function": "LeakyReLU",
        "bn": false,
        "dp": false,
        "dp_p": 0.2,
        "dataset": "pseudo_3D",
        "pregis_net":{
            "mermaid_net": {
                "name": "MermaidNet",
                "gamma_mermaid": 1,
                "similarity_measure": "ncc"
            },
            "recons_net": {
                "name": "VaeNet",
                "gamma_recons": 1,
                "use_TV_loss": false
            }
        }
    },
    "train":{
        "n_of_epochs":50,
        "batch_size":2,
        "min_summary_period":15,
        "optimizer":{
            "name": "ADAM",
            "lr": 0.0005,
            "scheduler":{
                "name": "multistepLR",
                "milestones": [
                   15,
                   30,
                   40
                ],
                "gamma": 0.1
            }
        }
    },
    "validate":{
        "batch_size":2,
        "validate_epoch_period":1
    },
    "test":{
    }
}
